// Handle item selection
customDropdownItems.forEach(item => {
  item.addEventListener("click", () => {
    const tierName = item.querySelector(".custom-dropdown-tier")?.textContent?.trim();

    if (tierName) {
      // Step 1: Remove red box using the current toggle text
      removeRedBox(customToggle.textContent.trim());

      // Step 2: Update the toggle text
      customToggle.textContent = tierName;

      // Step 3: Highlight selection
      customDropdownItems.forEach(i => i.classList.remove("selected"));
      item.classList.add("selected");

      // Step 4: Close dropdown
      customDropdown.classList.remove("active");

      // Step 5: Call red box again with the new selection
      redBox(tierName);
    }
  });
});
