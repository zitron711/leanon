document.addEventListener('DOMContentLoaded', function () {
  const wrapper = document.querySelector('.custom-dropdown-wrapper');
  const toggle = wrapper.querySelector('.custom-dropdown-toggle');
  const dropdown = wrapper.querySelector('.custom-dropdown-list');
  const options = wrapper.querySelectorAll('.dropdown-option');

  // Toggle dropdown
  toggle.addEventListener('click', () => {
    dropdown.classList.toggle('active');
  });

  // Select option
  options.forEach(option => {
    option.addEventListener('click', () => {
      const title = option.querySelector('.option-title').textContent;
      toggle.textContent = title;
      dropdown.classList.remove('active');
    });
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (!wrapper.contains(e.target)) {
      dropdown.classList.remove('active');
    }
  });
});
