document.addEventListener('DOMContentLoaded', () => {
  const dropdownToggle = document.querySelector('.change-card-toggle');
  const dropdownMenu = document.querySelector('.change-card-dropdown');
  const dropdownItems = dropdownMenu?.querySelectorAll('.change-card-dropdown-list');

  // Toggle dropdown on clicking toggle
  dropdownToggle?.addEventListener('click', () => {
    dropdownMenu.classList.toggle('active');
  });

  // Close dropdown when clicking outside toggle & dropdown
  document.addEventListener('click', (event) => {
    if (
      !dropdownToggle?.contains(event.target) &&
      !dropdownMenu?.contains(event.target)
    ) {
      dropdownMenu.classList.remove('active');
    }
  });

  // Close dropdown on selecting an item
  dropdownItems?.forEach((item) => {
    item.addEventListener('click', () => {
      dropdownMenu.classList.remove('active');
      // Add other logic here to handle selection if needed
    });
  });
});
