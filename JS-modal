document.addEventListener('DOMContentLoaded', function () {
  const inputs = document.querySelectorAll('.spend-input');
  const resultValues = document.querySelectorAll('.result-value');
  const totalValue = document.querySelector('.total-value');

  function calculateRewards() {
    let total = 0;

    inputs.forEach((input, index) => {
      const percent = parseFloat(input.dataset.percent); // 3, 2, 1
      const value = parseFloat(input.value);

      if (!isNaN(value)) {
        const yearlySpend = value * 12;
        const reward = (percent / 100) * yearlySpend;
        resultValues[index].textContent = `$${reward.toFixed(2)}`;
        total += reward;
      } else {
        resultValues[index].textContent = '--';
      }
    });

    totalValue.textContent = `$${total.toFixed(2)}`;
  }

  inputs.forEach(input => {
    input.addEventListener('input', calculateRewards);
  });
});
