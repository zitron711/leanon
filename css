<div class="modal-backdrop"></div>



.modal-backdrop {
  content: '';
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
  display: none;
}

/* Show modal and backdrop when open */
.modal-overlay.open {
  transform: translateX(0);
}

.modal-backdrop.open {
  display: block;
}
