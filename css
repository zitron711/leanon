// -------- THEME BASED STYLES --------

// Default Theme (blue + red)
.content-tab_quicklist.theme-default {
  color: #0070d2; // blue text
}

.theme-default .quick-list-item_icon svg,
.theme-default .hx-icon-interactive-caret-right {
  color: #cc0000; // red icon and red arrow
}

.theme-default .divider {
  border-top-color: #0070d2; // blue divider
}

// White Theme (everything white)
.content-tab_quicklist.theme-white {
  color: #ffffff; // white text
}

.theme-white .quick-list-item_icon svg,
.theme-white .hx-icon-interactive-caret-right {
  color: #ffffff; // white icon and white arrow
}

.theme-white .divider {
  border-top-color: #ffffff; // white divider
}

// Gray Theme (custom theme you added)
.content-tab_quicklist.theme-gray {
  color: #000000; // black text
}

.theme-gray .quick-list-item_icon svg,
.theme-gray .hx-icon-interactive-caret-right {
  color: #cc0000; // red icon and red arrow
}

.theme-gray .divider {
  border-top-color: #000000; // black divider
}

// -------- RESPONSIVE DESIGN --------

// Mobile
@media (max-width: 767px) {
  .tile {
    flex-direction: column;
    align-items: flex-start;
  }

  .quick-list-item_icon {
    margin-bottom: 0.5rem;
  }

  .hx-icon-interactive-caret-right {
    align-self: flex-end;
  }
}

// Tablet
@media (min-width: 768px) and (max-width: 1023px) {
  .tile {
    flex-direction: row;
  }
}

// Desktop
@media (min-width: 1024px) {
  .tile {
    flex-direction: row;
  }
}
