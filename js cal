// Get all input fields and result display fields
  const inputs = document.querySelectorAll('.spend-input');
  const resultValues = document.querySelectorAll('.result-value');
  const totalValue = document.querySelector('.total-value');

  function calculateRewards() {
    let total = 0;

    inputs.forEach((input, index) => {
      const percent = parseFloat(input.dataset.percent); // from data-percent
      const value = parseFloat(input.value); // user input

      if (!isNaN(value)) {
        const yearlySpend = value * 12; // Convert monthly to yearly
        const reward = (percent / 100) * yearlySpend; // Reward calculation
        resultValues[index].textContent = `$${reward.toFixed(2)}`; // Display result
        total += reward;
      } else {
        resultValues[index].textContent = '--';
      }
    });

    totalValue.textContent = `$${total.toFixed(2)}`; // Display total
  }

  // Attach input event listener to each input field
  inputs.forEach(input => {
    input.addEventListener('input', calculateRewards);
  });
